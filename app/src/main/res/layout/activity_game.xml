<!-- res/layout/activity_game.xml - Kid-friendly tablet layout -->
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gameSwipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/gameScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="always">

        <LinearLayout
            android:id="@+id/game_root"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Action buttons row -->
            <LinearLayout
                android:id="@+id/actionButtonsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:baselineAligned="false"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/deleteButton"
                    android:text="⌫ Delete"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:background="@drawable/button_rounded_secondary"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/replayButton"
                    android:text="▶️ Play Again"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:background="@drawable/button_rounded_primary"
                    android:textColor="#FFFFFF"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Prompt text - Larger -->
            <TextView
                android:id="@+id/promptText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Question container -->
            <LinearLayout
                android:id="@+id/questionContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <!-- Message area - Larger text -->
            <TextView
                android:id="@+id/messageArea"
                android:textSize="30sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF6B35"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:background="@drawable/text_background_rounded"
                android:padding="12dp" />

            <!-- Blocks container for dashed outline blocks -->
            <LinearLayout
                android:id="@+id/blocksContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:visibility="gone" />

            <!-- Choice buttons grid - Auto-fit columns based on screen width -->
            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/choicesGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#E8F4F8"
                android:padding="12dp" />

            <!-- Submit button - Larger and more prominent -->
            <Button
                android:id="@+id/submitButton"
                android:text="✓ Submit"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_marginTop="12dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:background="@drawable/button_rounded_success"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
