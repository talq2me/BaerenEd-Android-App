<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Content area: image, title, page text, end text, or question -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/book_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="180dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:contentDescription="Page illustration" />

            <TextView
                android:id="@+id/book_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:padding="24dp"
                android:visibility="gone" />

            <ScrollView
                android:id="@+id/book_text_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:fillViewport="false">

                <TextView
                    android:id="@+id/book_page_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:lineSpacingMultiplier="1.3"
                    android:textColor="#333333"
                    android:padding="16dp" />
            </ScrollView>

            <TextView
                android:id="@+id/book_end_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:padding="48dp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/book_question_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/book_question_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="#333333"
                    android:paddingBottom="16dp" />

                <LinearLayout
                    android:id="@+id/book_options_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/book_btn_prev"
            android:text="&lt;"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:textSize="28sp"
            android:background="@drawable/button_rounded_secondary"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/book_btn_next"
            android:text="&gt;"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:textSize="28sp"
            android:background="@drawable/button_rounded_primary"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>
