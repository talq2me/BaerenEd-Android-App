<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Sentence display -->
    <TextView
        android:id="@+id/sentenceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#666666"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:fontFamily="sans-serif" />

    <!-- Current word to spell (hidden in normal mode, shown in retry mode) -->
    <TextView
        android:id="@+id/wordTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:fontFamily="sans-serif-bold"
        android:textStyle="bold" />

    <!-- Reference word to copy (shown in retry mode) - reserve space so UI doesn't shift -->
    <TextView
        android:id="@+id/referenceWordTextView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="32sp"
        android:textColor="#2196F3"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:visibility="invisible"
        android:text="Copy this word:" />

    <!-- Progress display -->
    <TextView
        android:id="@+id/progressTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#FF6B35"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:fontFamily="sans-serif-medium" />

    <!-- Play again: replay sentence and word -->
    <Button
        android:id="@+id/playAgainButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ”Š Play again"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_rounded_secondary"
        android:textColor="#FFFFFF" />

    <!-- Drawing canvas with lined paper -->
    <com.talq2me.baerened.DrawingCanvasView
        android:id="@+id/drawingCanvas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF" />

    <!-- Tool buttons row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <!-- Printing/Cursive Toggle -->
        <FrameLayout
            android:id="@+id/modeToggleContainer"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="2"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_rounded_secondary">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                
                <TextView
                    android:id="@+id/printingLabel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Printing"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true" />
                
                <TextView
                    android:id="@+id/cursiveLabel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Cursive"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>
            
            <View
                android:id="@+id/toggleSlider"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="#FFFFFF"
                android:alpha="0.3" />
        </FrameLayout>

        <Button
            android:id="@+id/eraserButton"
            android:text="ðŸ§½ Eraser"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"
            android:background="@drawable/button_rounded_secondary"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/clearButton"
            android:text="ðŸ—‘ï¸ Clear"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:background="@drawable/button_rounded_secondary"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Check button -->
    <Button
        android:id="@+id/checkButton"
        android:text="âœ“ Check"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:background="@drawable/button_rounded_success"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium" />

</LinearLayout>
