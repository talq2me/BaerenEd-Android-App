<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#F5F5F5">

    <!-- Header: sentence (flex) + progress (fixed), more space for readability -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="4dp"
        android:paddingBottom="12dp"
        android:minHeight="48dp">
        <TextView
            android:id="@+id/sentenceTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="sans-serif" />
        <TextView
            android:id="@+id/progressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            android:textColor="#FF6B35"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Drawing canvas with lined paper - gets remaining space -->
    <com.talq2me.baerened.DrawingCanvasView
        android:id="@+id/drawingCanvas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="6dp"
        android:background="#FFFFFF" />

    <!-- Tool buttons row - compact -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp">

        <FrameLayout
            android:id="@+id/modeToggleContainer"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="2"
            android:layout_marginEnd="6dp"
            android:background="@drawable/button_rounded_secondary">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/printingLabel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Printing"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true" />
                <TextView
                    android:id="@+id/cursiveLabel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Cursive"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>
            <View
                android:id="@+id/toggleSlider"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="#FFFFFF"
                android:alpha="0.3" />
        </FrameLayout>

        <Button
            android:id="@+id/eraserButton"
            android:text="ðŸ§½ Eraser"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            android:textSize="13sp"
            android:background="@drawable/button_rounded_secondary"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/clearButton"
            android:text="ðŸ—‘ï¸ Clear"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:textSize="13sp"
            android:background="@drawable/button_rounded_secondary"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Check + Play again buttons side by side (Check left so not under Clear) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/checkButton"
            android:text="âœ“ Check"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/button_rounded_success"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium" />
        <Button
            android:id="@+id/playAgainButton"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="ðŸ”Š Play again"
            android:textSize="14sp"
            android:background="@drawable/button_rounded_secondary"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>
