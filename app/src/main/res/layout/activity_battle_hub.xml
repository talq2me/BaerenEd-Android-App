<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@android:color/transparent">

            <!-- Header with back button, counts, buttons, title, and more buttons -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:minHeight="48dp">
                
                <!-- Counts display (left of center) -->
                <LinearLayout
                    android:id="@+id/countsDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">
                    
                    <TextView
                        android:id="@+id/coinCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 ðŸª™"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginEnd="6dp" />
                    
                    <TextView
                        android:id="@+id/berryCountDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 ðŸ"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginEnd="6dp" />
                    
                    <TextView
                        android:id="@+id/minuteCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 â±ï¸"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />
                </LinearLayout>
                
                <!-- Left header buttons container (before title) -->
                <LinearLayout
                    android:id="@+id/headerButtonsLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/countsDisplay"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:paddingStart="8dp" />
                
                <!-- Title (centered, but constrained to not overlap buttons) -->
                <TextView
                    android:id="@+id/headerTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/countsDisplay"
                    android:layout_toStartOf="@id/headerButtonsRight"
                    android:layout_centerVertical="true"
                    android:text="âš¡ Pokemon Battle Hub âš¡"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textAlignment="center" />
                
                <!-- Right header buttons container (aligned to right edge) -->
                <LinearLayout
                    android:id="@+id/headerButtonsRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingEnd="8dp" />
            </RelativeLayout>

            <!-- Pokedex Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="#33FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <!-- Pokedex Header (clickable) -->
                    <LinearLayout
                        android:id="@+id/pokedexHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/pokedexTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ“– My Pokedex"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/pokedexToggle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â–¼"
                            android:textSize="20sp"
                            android:textColor="@android:color/white"
                            android:padding="5dp" />
                    </LinearLayout>

                    <!-- Pokedex Content -->
                    <HorizontalScrollView
                        android:id="@+id/pokedexContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="horizontal"
                        android:fadeScrollbars="false">

                        <LinearLayout
                            android:id="@+id/pokedexGrid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp" />
                    </HorizontalScrollView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Battle Arena -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="#33FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’ª Power up your Pokemon with berries before battling the boss! ðŸ’ª"
                        android:textSize="12sp"
                        android:textColor="#764ba2"
                        android:gravity="center"
                        android:padding="5dp"
                        android:background="#ffeaa7" />

                    <!-- Battle Button -->
                    <Button
                        android:id="@+id/battleButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš”ï¸ Battle âš”ï¸"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:enabled="false"
                        android:background="@drawable/button_rounded" />

                    <!-- Battle Field -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="10dp">

                        <!-- Player Pokemon -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/playerPokemonSprite"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:scaleType="fitCenter"
                                android:contentDescription="Player Pokemon" />

                            <TextView
                                android:id="@+id/playerPokemonName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dragonite"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginTop="5dp" />

                            <!-- HP Bar -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="5dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="HP"
                                    android:textSize="12sp"
                                    android:layout_marginEnd="5dp" />

                                <ProgressBar
                                    android:id="@+id/playerHP"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="0dp"
                                    android:layout_height="20dp"
                                    android:layout_weight="1"
                                    android:max="100"
                                    android:progress="100"
                                    android:progressTint="#4CAF50" />
                            </LinearLayout>

                            <!-- Power Bar -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="5dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Power"
                                    android:textSize="12sp"
                                    android:layout_marginEnd="5dp" />

                                <ProgressBar
                                    android:id="@+id/playerPower"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="0dp"
                                    android:layout_height="20dp"
                                    android:layout_weight="1"
                                    android:max="100"
                                    android:progress="0"
                                    android:progressTint="#FFD700" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- VS Divider -->
                        <TextView
                            android:id="@+id/vsDivider"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VS"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#ff6b6b"
                            android:padding="10dp" />

                        <!-- Boss Pokemon -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/bossPokemonSprite"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:scaleType="fitCenter"
                                android:contentDescription="Boss Pokemon" />

                            <TextView
                                android:id="@+id/bossPokemonName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Charizard"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_marginTop="5dp" />

                            <!-- HP Bar -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="5dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="HP"
                                    android:textSize="12sp"
                                    android:layout_marginEnd="5dp" />

                                <ProgressBar
                                    android:id="@+id/bossHP"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="0dp"
                                    android:layout_height="20dp"
                                    android:layout_weight="1"
                                    android:max="100"
                                    android:progress="100"
                                    android:progressTint="#2ECC71" />
                            </LinearLayout>

                            <!-- Power Bar -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="5dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Power"
                                    android:textSize="12sp"
                                    android:layout_marginEnd="5dp" />

                                <ProgressBar
                                    android:id="@+id/bossPower"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="0dp"
                                    android:layout_height="20dp"
                                    android:layout_weight="1"
                                    android:max="100"
                                    android:progress="100"
                                    android:progressTint="#4CAF50" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Berry Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="#33FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ Berry Power Meter ðŸ"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#764ba2"
                        android:gravity="center"
                        android:layout_marginBottom="10dp" />

                    <!-- Berry Meter -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#e0e0e0"
                        android:padding="3dp">

                        <LinearLayout
                            android:id="@+id/berryFill"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="#ff6b6b"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/berryCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 / 100 Berries"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </FrameLayout>

                    <!-- Action Buttons - All in one row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="15dp">

                        <Button
                            android:id="@+id/earnBerriesButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ Earn Berries ðŸ"
                            android:layout_marginEnd="3dp"
                            android:textSize="12sp"
                            android:background="@drawable/button_rounded" />

                        <Button
                            android:id="@+id/earnExtraBerriesButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ Earn Extra ðŸ"
                            android:layout_marginStart="3dp"
                            android:layout_marginEnd="3dp"
                            android:textSize="12sp"
                            android:background="@drawable/button_rounded" />
                        
                        <Button
                            android:id="@+id/bonusTrainingButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸŽ® Bonus ðŸŽ®"
                            android:layout_marginStart="3dp"
                            android:layout_marginEnd="3dp"
                            android:textSize="12sp"
                            android:background="@drawable/button_rounded" />

                        <Button
                            android:id="@+id/choresButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Chores 4 ðŸª™"
                            android:layout_marginStart="3dp"
                            android:textSize="12sp"
                            android:background="@drawable/button_rounded" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Victory Overlay -->
    <FrameLayout
        android:id="@+id/victoryOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="30dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ‰ Victory! ðŸŽ‰"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#764ba2"
                    android:layout_marginBottom="20dp" />

                <ImageView
                    android:id="@+id/victoryPokemonSprite"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginBottom="20dp"
                    android:contentDescription="Victory Pokemon" />

                <TextView
                    android:id="@+id/victoryPokemonName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Charizard"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/victoryMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You caught Charizard!\nAdded to your Pokedex!"
                    android:textSize="16sp"
                    android:textColor="#666"
                    android:gravity="center"
                    android:layout_marginBottom="20dp" />

                <Button
                    android:id="@+id/victoryCloseButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue"
                    android:background="@drawable/button_rounded" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</FrameLayout>
